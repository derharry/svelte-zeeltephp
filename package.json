{
	"name": "zeeltephp",
	"version": "0.0.9.1",
	"description": "tbd",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev --mode dev",
		"build": "vite build --mode build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && npm run cleanup && npm run copyApi && publint",
		"copyApi": "cpx 'static/api/**/*.{php,.htaccess}' 'dist/api' --includeEmptyDirs",
  		"cleanup": "npx del-cli ./dist/zplib",
		"postinstall": "npm run prepack",
		"zp-dist-copy-api":  "cpx 'static/api/**/*.{php,.htaccess}' 'dist/api' --includeEmptyDirs",
		"zp-build-copy-api": "cpx 'static/api/**/*.php' 'dist/api' --include-empty-dirs"

	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./vite-plugin": {
		  "types": "./dist/vite-plugin/zeeltephp-vite-plugin.d.ts",
		  "import": "./dist/vite-plugin/zeeltephp-vite-plugin.js"
		}
	},
		"exclude": ["src/lib/zplib"],
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0"
	},
	"devDependencies": {
		"@picocss/pico": "^2.1.1",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"cpx": "^1.5.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"typescript": "^5.3.2",
		"vite": "^6.2.6"
	},
	"keywords": [
		"svelte"
	]
}
