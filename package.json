{
	"name": "zeeltephp",
	"version": "1.0.2",
	"description": "Svelte-frontend, PHP-backend (rc1)",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack.org": "svelte-kit sync && svelte-package && npm run  publint",
		"prepack": "npm run zp-01-create-dist && npm run zp-02-copy-distApi && npm run zp-03-cleanup-dist",
		"zp-01-create-dist": "svelte-kit sync && svelte-package && publint",
		"zp-02-copy-distApi": "npx cpy-cli './static/api/**/*.{php,.htaccess}' ./dist/api",
		"zp-03-cleanup-dist": "npx del-cli ./dist/zplib"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/zplib",
		"!src/lib/zplib"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./vite-plugin": {
			"types": "./dist/vite-plugin/zeeltephp-vite-plugin.d.ts",
			"import": "./dist/vite-plugin/zeeltephp-vite-plugin.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/adapter-static": "^3.0.8"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"typescript": "^5.3.2",
		"vite": "^6.2.6"
	},
	"keywords": [
		"svelte php adapter-static"
	],
	"dependencies": {
		"@picocss/pico": "^2.1.1"
	}
}
